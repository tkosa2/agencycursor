@page "{id:int}"
@model AgencyCursor.Pages.Requestors.DetailsModel
@{
    ViewData["Title"] = "Requestor Details";
}

<h1>@Model.Requestor?.Name</h1>
<dl class="row">
    @if (!string.IsNullOrWhiteSpace(Model.Requestor?.FirstName) || !string.IsNullOrWhiteSpace(Model.Requestor?.LastName))
    {
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.Requestor?.FirstName</dd>
        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.Requestor?.LastName</dd>
    }
    <dt class="col-sm-2">Phone</dt>
    <dd class="col-sm-10">@Model.Requestor?.Phone</dd>
    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Requestor?.Email</dd>
    <dt class="col-sm-2">Address</dt>
    <dd class="col-sm-10">@Model.Requestor?.Address</dd>
    <dt class="col-sm-2">Notes</dt>
    <dd class="col-sm-10">@Model.Requestor?.Notes</dd>
</dl>
<p>
    <a asp-page="Edit" asp-route-id="@Model.Requestor?.Id" class="btn btn-primary">Edit</a>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</p>

<h2>Requests</h2>
@if (Model.Requests.Any())
{
    <table class="table table-sm">
        <thead><tr><th>Type</th><th>Date/Time</th><th>Status</th><th></th></tr></thead>
        <tbody>
            @foreach (var req in Model.Requests)
            {
                <tr>
                    <td>@req.TypeOfService</td>
                    <td>@req.ServiceDateTime.ToString("g")</td>
                    <td>@req.Status</td>
                    <td><a asp-page="/Requests/Details" asp-route-id="@req.Id">View</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No requests yet.</p>
}
