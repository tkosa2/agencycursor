@page "{id:int}"
@model AgencyCursor.Pages.Requestors.DeleteModel
@{
    ViewData["Title"] = "Delete Requestor";
}

<h1>Delete Requestor</h1>
<p class="text-danger">Are you sure you want to delete this requestor?</p>
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Requestor?.Name</dd>
    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Requestor?.Email</dd>
</dl>
<form method="post" asp-route-id="@Model.Requestor?.Id">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
