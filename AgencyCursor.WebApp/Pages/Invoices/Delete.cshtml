@page "{id:int}"
@model AgencyCursor.Pages.Invoices.DeleteModel
@{
    ViewData["Title"] = "Delete Invoice";
}

<h1>Delete Invoice</h1>
<p class="text-danger">Are you sure you want to delete this invoice?</p>
<dl class="row">
    <dt class="col-sm-2">Invoice #</dt>
    <dd class="col-sm-10">@Model.Invoice?.InvoiceNumber</dd>
    <dt class="col-sm-2">Requestor</dt>
    <dd class="col-sm-10">@Model.Invoice?.Requestor?.Name</dd>
    <dt class="col-sm-2">Total</dt>
    <dd class="col-sm-10">@Model.Invoice?.TotalCost.ToString("C")</dd>
</dl>
<form method="post" asp-route-id="@Model.Invoice?.Id">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
