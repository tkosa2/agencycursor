@page
@model AgencyCursor.Pages.ContactModel
@{
    ViewData["Title"] = "Contact Us";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h1 class="mb-4">Contact Us</h1>
            <p class="lead mb-5">Have questions? We're here to help. Reach out to us through any of the methods below.</p>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="row g-4 mb-5">
                <div class="col-md-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <div class="display-4 mb-3">üìû</div>
                            <h3>Phone</h3>
                            <p class="text-muted">Call us for immediate assistance</p>
                            <p class="fs-5"><a href="tel:+1234567890">(123) 456-7890</a></p>
                            <p class="small text-muted">Monday - Friday, 9:00 AM - 5:00 PM</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <div class="display-4 mb-3">‚úâÔ∏è</div>
                            <h3>Email</h3>
                            <p class="text-muted">Send us an email</p>
                            <p class="fs-5"><a href="mailto:info@agencycursor.com">info@agencycursor.com</a></p>
                            <p class="small text-muted">We typically respond within 24 hours</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm mb-5">
                <div class="card-body">
                    <h2 class="mb-4">Send us a Message</h2>
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="ContactForm.Name" class="form-label">Name <span class="text-danger">*</span></label>
                            <input asp-for="ContactForm.Name" class="form-control" required />
                            <span asp-validation-for="ContactForm.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ContactForm.Email" class="form-label">Email <span class="text-danger">*</span></label>
                            <input asp-for="ContactForm.Email" class="form-control" type="email" required />
                            <span asp-validation-for="ContactForm.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ContactForm.Phone" class="form-label">Phone</label>
                            <input asp-for="ContactForm.Phone" class="form-control" type="tel" />
                            <span asp-validation-for="ContactForm.Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ContactForm.Subject" class="form-label">Subject <span class="text-danger">*</span></label>
                            <input asp-for="ContactForm.Subject" class="form-control" required />
                            <span asp-validation-for="ContactForm.Subject" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ContactForm.Message" class="form-label">Message <span class="text-danger">*</span></label>
                            <textarea asp-for="ContactForm.Message" class="form-control" rows="6" required></textarea>
                            <span asp-validation-for="ContactForm.Message" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg">Send Message</button>
                        <a asp-page="/Home" class="btn btn-secondary btn-lg">Back to Home</a>
                    </form>
                </div>
            </div>

            <div class="text-center mb-5">
                <h3>Quick Links</h3>
                <p>
                    <a asp-page="/Home" class="btn btn-outline-primary me-2">Home</a>
                    <a asp-page="/Request" class="btn btn-outline-primary me-2">Request an Interpreter</a>
                    <a asp-page="/Contact" class="btn btn-outline-primary">Contact Us</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
