@page
@model AgencyCursor.Pages.Requests.IndexModel
@{
    ViewData["Title"] = "Requests";
}

<style>
    .badge-aqua {
        background-color: #00CED1;
        color: #000;
    }
    .bg-orange {
        background-color: #FFA500;
        color: #000;
    }
</style>

<h1>Requests</h1>
<p class="text-muted">Requests for interpreting services from requestors.</p>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<p>
    <a asp-page="Create" class="btn btn-primary">New Request</a>
    <a asp-page="ImportFromEmail" class="btn btn-outline-primary">Import from Email</a>
</p>

<form method="get" class="row g-2 align-items-end mb-3">
    <div class="col-auto">
        <label asp-for="StatusFilter" class="form-label">Status</label>
        <select asp-for="StatusFilter" asp-items="Model.StatusOptions" class="form-select"></select>
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-outline-secondary">Filter</button>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Requestor</th>
            <th>Type</th>
            <th>Date/Time</th>
            <th>Location</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model.Requests)
        {
            <tr>
                <td><a asp-page="/Requestors/Details" asp-route-id="@r.RequestorId">@r.Requestor?.Name</a></td>
                <td>@r.TypeOfService</td>
                <td>@r.ServiceDateTime.ToString("g")</td>
                <td>@r.Location</td>
                <td>
                    @{
                        var badgeClass = r.Status?.ToLower() switch
                        {
                            "new request" or "reviewed" or "approved" => "bg-warning text-dark",
                            "broadcasted" => "bg-info text-dark",
                            "assigned" or "confirmed" => "badge-aqua",
                            "completed" or "cancelled<48h" => "bg-orange text-dark",
                            "paid" => "bg-success",
                            "cancelled>48h" => "bg-danger",
                            _ => "bg-secondary"
                        };
                    }
                    <span class="badge @badgeClass">@r.Status</span>
                </td>
                <td>
                    <a asp-page="Details" asp-route-id="@r.Id" class="btn btn-sm btn-outline-primary">Details</a>
                    <a asp-page="Edit" asp-route-id="@r.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                    <form method="post" asp-page-handler="Clone" asp-route-id="@r.Id" style="display: inline;">
                        <button type="submit" class="btn btn-sm btn-outline-info" onclick="return confirm('Clone this request?');">Clone</button>
                    </form>
                    <a asp-page="/Appointments/Create" asp-route-requestId="@r.Id" class="btn btn-sm btn-outline-success">Assign Interpreter</a>
                    <a asp-page="Delete" asp-route-id="@r.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
