@page
@model AgencyCursor.Pages.Interpreters.CreateModel
@{
    ViewData["Title"] = "Register Interpreter with Agency";
}

<h1>Add Interpreter (Manual Entry)</h1>
<p class="text-muted">
    Add an interpreter manually to the agency's registered interpreter list. 
    <strong>Note:</strong> For RID-registered interpreters, use the <a asp-page="Index">Search RID Registry</a> page to find and register them automatically.
</p>

<form method="post" class="needs-validation" novalidate>
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Interpreter.Name" class="form-label">Interpreter Name <span class="text-danger">*</span></label>
                <input asp-for="Interpreter.Name" class="form-control" required />
                <span asp-validation-for="Interpreter.Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Interpreter.Email" class="form-label">Email</label>
                <input type="email" asp-for="Interpreter.Email" class="form-control" />
                <span asp-validation-for="Interpreter.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Interpreter.Phone" class="form-label">Phone</label>
                <input type="tel" asp-for="Interpreter.Phone" class="form-control" />
                <span asp-validation-for="Interpreter.Phone" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Interpreter.Languages" class="form-label">Languages of Expertise</label>
                <input asp-for="Interpreter.Languages" class="form-control" placeholder="e.g. ASL, Spanish, Russian" />
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Interpreter.Certification" class="form-label">Certification</label>
                <input asp-for="Interpreter.Certification" class="form-control" placeholder="e.g. CDI, ASL-certified, RID Certified" />
            </div>

            <div class="mb-3">
                <label asp-for="Interpreter.Availability" class="form-label">Availability</label>
                <input asp-for="Interpreter.Availability" class="form-control" placeholder="e.g. Mon-Fri 8am-5pm" />
            </div>

            <div class="mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="Interpreter.IsRegisteredWithAgency" checked />
                    <label class="form-check-label" asp-for="Interpreter.IsRegisteredWithAgency">
                        Registered with Agency
                    </label>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Interpreter.Notes" class="form-label">Notes</label>
                <textarea asp-for="Interpreter.Notes" class="form-control" rows="4" placeholder="Additional information about the interpreter..."></textarea>
            </div>
        </div>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Register Interpreter</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
