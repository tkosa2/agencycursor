@page "{id:int}"
@model AgencyCursor.Pages.Interpreters.DeleteModel
@{
    ViewData["Title"] = "Delete Interpreter";
}

<h1>Delete Interpreter</h1>
<p class="text-danger">Are you sure you want to delete this interpreter?</p>
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Interpreter?.Name</dd>
    <dt class="col-sm-2">Languages</dt>
    <dd class="col-sm-10">@Model.Interpreter?.Languages</dd>
</dl>
<form method="post" asp-route-id="@Model.Interpreter?.Id">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
