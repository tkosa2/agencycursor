@page "{requestId:int}/{interpreterId:int}"
@model AgencyCursor.Pages.Interpreters.RespondToRequestModel
@{
    ViewData["Title"] = "Respond to Interpretation Request";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Response to Interpretation Request #@Model.Request?.Id</h4>
                </div>
                <div class="card-body">
                    <!-- Request Details -->
                    <div class="alert alert-info">
                        <h5>Request Details</h5>
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Service Type:</dt>
                            <dd class="col-sm-8">
                                @Model.Request?.TypeOfService
                                @if (!string.IsNullOrEmpty(Model.Request?.TypeOfServiceOther))
                                {
                                    <span class="text-muted">(@Model.Request.TypeOfServiceOther)</span>
                                }
                            </dd>

                            <dt class="col-sm-4">Date & Time:</dt>
                            <dd class="col-sm-8">@Model.Request?.ServiceDateTime.ToString("f")</dd>

                            <dt class="col-sm-4">Duration:</dt>
                            <dd class="col-sm-8">
                                @if (Model.Request?.EndDateTime.HasValue == true)
                                {
                                    var duration = (Model.Request.EndDateTime.Value - Model.Request.ServiceDateTime).TotalHours;
                                    @($"{duration:F1} hours")
                                }
                                else
                                {
                                    <text>2 hours (estimated)</text>
                                }
                            </dd>

                            <dt class="col-sm-4">Location:</dt>
                            <dd class="col-sm-8">@Model.Request?.Location</dd>

                            @if (!string.IsNullOrEmpty(Model.Request?.GenderPreference))
                            {
                                <dt class="col-sm-4">Gender Preference:</dt>
                                <dd class="col-sm-8">@Model.Request.GenderPreference</dd>
                            }

                            @if (!string.IsNullOrEmpty(Model.Request?.Specializations))
                            {
                                <dt class="col-sm-4">Specializations Required:</dt>
                                <dd class="col-sm-8">@Model.Request.Specializations</dd>
                            }

                            @if (!string.IsNullOrEmpty(Model.Request?.ConsumerNames))
                            {
                                <dt class="col-sm-4">Consumer Name(s):</dt>
                                <dd class="col-sm-8">@Model.Request.ConsumerNames</dd>
                            }

                            @if (!string.IsNullOrEmpty(Model.Request?.AdditionalNotes))
                            {
                                <dt class="col-sm-4">Additional Notes:</dt>
                                <dd class="col-sm-8">@Model.Request.AdditionalNotes</dd>
                            }

                            <dt class="col-sm-4">Requestor:</dt>
                            <dd class="col-sm-8">@Model.Request?.Requestor?.Name</dd>
                        </dl>
                    </div>

                    <!-- Interpreter Name & Previous Response -->
                    <div class="mb-3">
                        <strong>Responding as:</strong> @Model.CurrentInterpreter?.Name
                    </div>

                    @if (Model.CurrentResponse != null)
                    {
                        <div class="alert alert-warning">
                            <strong>You previously responded:</strong> 
                            <span class="badge bg-primary">@Model.CurrentResponse.Status</span>
                            <br />
                            <small class="text-muted">on @Model.CurrentResponse.RespondedAt.ToString("g")</small>
                            @if (!string.IsNullOrEmpty(Model.CurrentResponse.Notes))
                            {
                                <br /><small>Your note: @Model.CurrentResponse.Notes</small>
                            }
                            <br /><em>You can update your response below.</em>
                        </div>
                    }

                    <!-- Response Form -->
                    <form method="post" class="mt-4">
                        <div class="mb-4">
                            <label class="form-label fw-bold">Your Response:</label>
                            <div class="btn-group-vertical w-100" role="group">
                                <input type="radio" class="btn-check" name="ResponseStatus" value="Yes" id="response-yes" 
                                    @(Model.ResponseStatus == "Yes" ? "checked" : "") required />
                                <label class="btn btn-outline-success btn-lg text-start" for="response-yes">
                                    <i class="bi bi-check-circle"></i> <strong>Yes</strong> - I'm available and interested
                                </label>

                                <input type="radio" class="btn-check" name="ResponseStatus" value="Maybe" id="response-maybe" 
                                    @(Model.ResponseStatus == "Maybe" ? "checked" : "") />
                                <label class="btn btn-outline-warning btn-lg text-start" for="response-maybe">
                                    <i class="bi bi-question-circle"></i> <strong>Maybe</strong> - I need more information
                                </label>

                                <input type="radio" class="btn-check" name="ResponseStatus" value="No" id="response-no" 
                                    @(Model.ResponseStatus == "No" ? "checked" : "") />
                                <label class="btn btn-outline-danger btn-lg text-start" for="response-no">
                                    <i class="bi bi-x-circle"></i> <strong>No</strong> - I'm not available
                                </label>
                            </div>
                            <span asp-validation-for="ResponseStatus" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Notes" class="form-label">Additional Comments (optional):</label>
                            <textarea asp-for="Notes" class="form-control" rows="3" 
                                placeholder="E.g., 'I can do the job but need directions' or 'Interested but only if morning shift'"></textarea>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-primary btn-lg">Submit Response</button>
                            <a href="javascript:history.back()" class="btn btn-secondary btn-lg">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-3 text-center text-muted small">
                <p>Request #@Model.Request?.Id | You: @Model.CurrentInterpreter?.Name</p>
                <p>This link is unique to this request and your email. Each response is recorded.</p>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-group-vertical {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .btn-check:checked + label {
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }
</style>
