@page "{id:int}"
@model AgencyCursor.Pages.Appointments.DetailsModel
@{
    ViewData["Title"] = "Appointment Details";
}

<h1>Appointment #@Model.Appointment?.Id</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Assignment Section -->
<div class="card mb-4 border-primary">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Assign Interpreter</h5>
    </div>
    <div class="card-body">
        <form method="post" asp-page-handler="AssignInterpreter" asp-route-id="@Model.Appointment?.Id">
            <div class="row align-items-end">
                <div class="col-md-8">
                    <label for="SelectedInterpreterId" class="form-label">Select Interpreter</label>
                    <select asp-for="SelectedInterpreterId" class="form-select" id="SelectedInterpreterId" asp-items="Model.InterpreterList" required>
                        <option value="">-- Select Interpreter --</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100">Assign Interpreter</button>
                </div>
            </div>
            @if (Model.Appointment?.Interpreter != null)
            {
                <div class="mt-3">
                    <small class="text-muted">Currently assigned: <strong>@Model.Appointment.Interpreter.Name</strong></small>
                </div>
            }
        </form>
    </div>
</div>

<!-- Appointment Details -->
<dl class="row">
    <dt class="col-sm-2">Request</dt>
    <dd class="col-sm-10"><a asp-page="/Requests/Details" asp-route-id="@Model.Appointment?.RequestId">Request #@Model.Appointment?.RequestId</a> — @Model.Appointment?.Request?.Requestor?.Name</dd>
    <dt class="col-sm-2">Interpreter</dt>
    <dd class="col-sm-10">
        @if (Model.Appointment?.Interpreter != null)
        {
            <a asp-page="/Interpreters/Details" asp-route-id="@Model.Appointment.InterpreterId">@Model.Appointment.Interpreter.Name</a>
        }
        else
        {
            <span class="text-muted">Not assigned</span>
        }
    </dd>
    <dt class="col-sm-2">Date and Time</dt>
    <dd class="col-sm-10">@Model.Appointment?.ServiceDateTime.ToString("g")</dd>
    <dt class="col-sm-2">Location</dt>
    <dd class="col-sm-10">@Model.Appointment?.Location</dd>
    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10"><span class="badge bg-info">@Model.Appointment?.Status</span></dd>
    <dt class="col-sm-2">Service Details</dt>
    <dd class="col-sm-10">@Model.Appointment?.ServiceDetails</dd>
    <dt class="col-sm-2">Duration</dt>
    <dd class="col-sm-10">@(Model.Appointment?.DurationMinutes != null ? $"{Model.Appointment.DurationMinutes} min" : "—")</dd>
    <dt class="col-sm-2">Client/Employee Name</dt>
    <dd class="col-sm-10">@Model.Appointment?.ClientEmployeeName</dd>
    <dt class="col-sm-2">Additional Notes</dt>
    <dd class="col-sm-10">@Model.Appointment?.AdditionalNotes</dd>
</dl>
<p>
    <a asp-page="Edit" asp-route-id="@Model.Appointment?.Id" class="btn btn-primary">Edit</a>
    <a asp-page="/Invoices/Create" asp-route-appointmentId="@Model.Appointment?.Id" class="btn btn-success">Create Invoice</a>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</p>
