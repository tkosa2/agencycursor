@page "{id:int}"
@model AgencyCursor.Pages.Appointments.DeleteModel
@{
    ViewData["Title"] = "Delete Appointment";
}

<h1>Delete Appointment</h1>
<p class="text-danger">Are you sure you want to delete this appointment?</p>
<dl class="row">
    <dt class="col-sm-2">Request</dt>
    <dd class="col-sm-10">#@Model.Appointment?.RequestId - @Model.Appointment?.Request?.Requestor?.Name</dd>
    <dt class="col-sm-2">Interpreter</dt>
    <dd class="col-sm-10">@Model.Appointment?.Interpreter?.Name</dd>
    <dt class="col-sm-2">Date/Time</dt>
    <dd class="col-sm-10">@Model.Appointment?.ServiceDateTime.ToString("g")</dd>
</dl>
<form method="post" asp-route-id="@Model.Appointment?.Id">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
